# Node Environment
NODE_ENV=development

# Server Configuration
PORT=8080
FRONTEND_URL=http://localhost:9000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/research_suite
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=research_suite
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key!!

# searXNG Configuration
SEARX_ENDPOINT=http://localhost:8888
SEARXNG_SECRET=

# LiteLLM Configuration
# For local Ollama: http://localhost:11434
#   Example models: llama2, mistral, mixtral, codellama
# For LMStudio: http://localhost:1234/v1
#   Use any model loaded in LMStudio
# For LiteLLM Proxy: http://localhost:4000
#   Unified interface for all LLM providers
# For OpenAI API: https://api.openai.com/v1 (default if not set)
#   Models: gpt-3.5-turbo, gpt-4, gpt-4-turbo
LITELLM_BASE_URL=
LITELLM_API_KEY=your-api-key
LITELLM_DEFAULT_MODEL=gpt-3.5-turbo
LITELLM_TIMEOUT=60000

# Application Settings
MAX_SOURCES_PER_RESEARCH=50
DEFAULT_REPORT_LENGTH=medium
SESSION_TIMEOUT=86400000