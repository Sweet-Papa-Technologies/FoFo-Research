# Node Environment
NODE_ENV=development

# API Configuration
PORT=8080
FRONTEND_URL=http://localhost:9000

# Database Configuration
DB_NAME=research_suite
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://postgres:your_secure_password_here@postgres:5432/research_suite
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password_here

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key-here!!!

# searXNG Configuration
SEARX_ENDPOINT=http://searxng:8888
SEARXNG_SECRET=your-searxng-secret-key

# LiteLLM Configuration
LITELLM_API_KEY=your-litellm-api-key
LITELLM_DEFAULT_MODEL=gpt-3.5-turbo

# Application Settings
MAX_SOURCES_PER_RESEARCH=50
DEFAULT_REPORT_LENGTH=medium
SESSION_TIMEOUT=86400000

# Email Configuration (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@research-suite.local

# Monitoring (optional)
SENTRY_DSN=
ELASTICSEARCH_URL=

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_AUTH=false
ENABLE_API_KEYS=true