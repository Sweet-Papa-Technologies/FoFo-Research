# Node Environment
NODE_ENV=development

# API Configuration
PORT=8080
FRONTEND_URL=http://localhost:9000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/research_suite
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=research_suite
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password_here

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key-here!!!

# searXNG Configuration
SEARX_ENDPOINT=http://searxng:8888
SEARXNG_SECRET=your-searxng-secret-key

# LLM Configuration (KaibanJS supported providers)
# Provider options: openai, anthropic, google, azure, cohere, huggingface, ollama, groq, mistral
# If not specified, defaults to 'openai'
LITELLM_PROVIDER=

# Model configuration
# Examples by provider:
# - OpenAI: gpt-3.5-turbo, gpt-4, gpt-4-turbo
# - Anthropic: claude-3-opus, claude-3-sonnet, claude-3-haiku
# - Google: gemini-1.5-pro, gemini-1.5-flash, gemini-pro
# - Azure: Your deployed model name
# - Ollama: llama2, mistral, mixtral, etc.
# - Groq: llama3-70b, llama3-8b, mixtral-8x7b
# - Mistral: mistral-tiny, mistral-small, mistral-medium
LITELLM_DEFAULT_MODEL=gpt-3.5-turbo

# API Key for your chosen provider
# - OpenAI: Your OpenAI API key
# - Anthropic: Your Anthropic API key
# - Google: Your Google AI API key
# - Azure: Your Azure OpenAI API key
# - Groq: Your Groq API key
# - Mistral: Your Mistral API key
# - Ollama: Not required (local)
# - HuggingFace: Your HuggingFace API token
LITELLM_API_KEY=your-api-key

# Optional: Custom base URL for providers
# Use this for:
# - Azure OpenAI: https://your-resource.openai.azure.com
# - Ollama: http://localhost:11434
# - Custom OpenAI-compatible endpoints
LITELLM_BASE_URL=

# Request timeout in milliseconds
LITELLM_TIMEOUT=60000

# === Example configurations for different providers ===

# Google Gemini:
# LITELLM_PROVIDER=google
# LITELLM_DEFAULT_MODEL=gemini-1.5-pro
# LITELLM_API_KEY=your-google-api-key

# Anthropic Claude:
# LITELLM_PROVIDER=anthropic
# LITELLM_DEFAULT_MODEL=claude-3-opus
# LITELLM_API_KEY=your-anthropic-api-key

# Azure OpenAI:
# LITELLM_PROVIDER=azure
# LITELLM_DEFAULT_MODEL=your-deployment-name
# LITELLM_API_KEY=your-azure-api-key
# LITELLM_BASE_URL=https://your-resource.openai.azure.com

# Ollama (Local):
# LITELLM_PROVIDER=ollama
# LITELLM_DEFAULT_MODEL=llama2
# LITELLM_BASE_URL=http://localhost:11434

# Groq:
# LITELLM_PROVIDER=groq
# LITELLM_DEFAULT_MODEL=llama3-70b
# LITELLM_API_KEY=your-groq-api-key

# Application Settings
MAX_SOURCES_PER_RESEARCH=50
DEFAULT_REPORT_LENGTH=medium
SESSION_TIMEOUT=86400000

# Email Configuration (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@research-suite.local

# Monitoring (optional)
SENTRY_DSN=
ELASTICSEARCH_URL=

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_AUTH=false
ENABLE_API_KEYS=true